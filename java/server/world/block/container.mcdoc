use ::java::server::util::inventory::SlottedItem

struct ContainerBase {
	...super::BlockEntity,
	CustomName: #[text_component] string,
	/// Name of the item that a player has to be holding to open this container.
	/// Source is flattened to plain text and has formatting removed before the check.
	Lock: string,
	/// Loot table that will populate this container.
	LootTable: #[id=loot_table] string,
	/// Seed of the loot table.
	LootTableSeed: long,
}

dispatch minecraft:block[
	barrel,
	chest,
	trapped_chest,
	shulker_box,
	white_shulker_box,
	orange_shulker_box,
	magenta_shulker_box,
	light_blue_shulker_box,
	yellow_shulker_box,
	lime_shulker_box,
	pink_shulker_box,
	gray_shulker_box,
	light_gray_shulker_box,
	cyan_shulker_box,
	purple_shulker_box,
	blue_shulker_box,
	brown_shulker_box,
	green_shulker_box,
	red_shulker_box,
	black_shulker_box,
] to struct Container27 {
	...ContainerBase,
	/// Slots from 0 to 26.
	Items: [SlottedItem<byte @ 0..26>] @ 0..27,
}

dispatch minecraft:block[dispenser,dropper] to struct Container9 {
	/// Slots from 0 to 8.
	Items: [SlottedItem<byte @ 0..8>] @ 0..9,
}
