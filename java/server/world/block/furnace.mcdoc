use ::java::server::util::inventory::SlottedItem

dispatch minecraft:block[furnace,blast_furnace,smoker] to struct Furnace {
	...super::BlockEntity,
	CustomName: #[text_component] string,
	/// Name of the item that a player has to be holding to open this furnace.
	/// Source is flattened to plain text and has formatting removed before the check.
	Lock: string,
	/// The items in this furnace, with slots:
	/// * 0: Item being smelted
	/// * 1: Fuel
	/// * 2: Output
	Items: [SlottedItem<byte @ 0..2>] @ 0..3,
	/// Ticks until the fuel runs out.
	BurnTime: short,
	/// Ticks the item has been smelting for.
	CookTime: short,
	/// Ticks the item will take to be smelted.
	CookTimeTotal: short,
}
