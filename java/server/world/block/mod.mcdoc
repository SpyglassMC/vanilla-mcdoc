use ::java::server::world::item::DataComponentPatch

struct BlockEntity {
	id?: #[id="block_entity"] string,
	x?: int,
	y?: int,
	z?: int,
	/// Unknown
	/// 0 for regular block entities
	keepPacked?: boolean,
	#[since="1.20.5"]
	components?: DataComponentPatch<()>, // TODO: Figure out a good way to handle this generic
}

dispatch minecraft:block[
	bed,
	bell,
	daylight_detector,
	ender_chest,
	end_portal,
] to BlockEntity
